@model eCoachingLog.ViewModels.MyDashboardViewModel
@using eCoachingLog.Utils
<div class="row">
	<form class="form-inline pull-right" id="form-search-mydashboard">
		@Html.HiddenFor(m => m.Search.SiteName)
		<div class="form-group" style="padding:0px 5px 0px 50px;">
			<label class="radio-inline">
				@Html.RadioButtonFor(m => m.Search.LogType, Constants.LOG_SEARCH_TYPE_MY_SITE_PENDING, new { @class = "log-type" }) Pending
			</label>
		</div>
		<div class="form-group">
			<label class="radio-inline">
				@Html.RadioButtonFor(m => m.Search.LogType, Constants.LOG_SEARCH_TYPE_MY_SITE_COMPLETED, new { @class = "log-type" }) Completed
			</label>
		</div>
		<div class="form-group">
			<label class="radio-inline">
				@Html.RadioButtonFor(m => m.Search.LogType, Constants.LOG_SEARCH_TYPE_MY_SITE_WARNING, new { @class = "log-type" }) Warning
			</label>
		</div>

		<button type="submit" class="btn btn-info" id="btn-search">
			<span class="glyphicon glyphicon-search"></span> Go
		</button>
	</form>
</div>
<div class="clearfix"></div>

<script>
	var searchMySiteLogs = '@Url.Action("SearchMySiteLogs")';
</script>


