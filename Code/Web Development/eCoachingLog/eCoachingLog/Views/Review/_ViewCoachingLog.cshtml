@using eCoachingLog.Utils
<div class="container-fluid" style="height: 100%;">
	<div class="row row-eq-height">
		<div class="col-xs-4 blue-bar">
			@{Html.RenderPartial("_CoachingLogInfo"); }
		</div>
		<!--/.col-xs-4 -->
		<div class="col-xs-8">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" style="font-size: large;">X</span></button>
				@if (Model.LogDetail.StatusId == Constants.LOG_STATUS_COMPLETED)
				{
					<h3>Final</h3>
				}
			</div>

			<div class="modal-body" style="font-size: small;">
				<strong>Coaching Reason(s):</strong>
				<div class="table-responsive">
					<table class="table table-hover">
						@foreach (var reason in Model.LogDetail.Reasons)
						{
							<tr>
								<td>@reason.Description</td>
								<td>
									@foreach (var sub in reason.SubReasons)
									{
										@sub <br />
									}
								</td>
								<td>@reason.Value</td>
							</tr>
						}
					</table>
				</div>
				<div class="mt-2">
					<strong>Details of the behavior being coached:</strong><br />
					@Html.Raw(WebUtility.HtmlDecode(Model.LogDetail.Behavior)))
				</div>
				<div class='mt-2 @(@Model.ShowViewCseText ? "show" : "hide")'>
					<strong>Coaching Opportunity was a confirmed Customer Service Escalation.</strong><br />
				</div>
				<div class='mt-2 @(@Model.ShowViewCseText ? "hide" : "show")'>
					<strong>Coaching Opportunity was not a confirmed Customer Service Escalation.</strong><br />
				</div>
				<div class='mt-2 @(string.IsNullOrEmpty(Model.LogDetail.MgrNotes) ? "hide" : "show")'>
					<strong>Manager Notes:</strong><br />
					@Html.Raw(WebUtility.HtmlDecode(@Model.LogDetail.MgrNotes))
				</div>
				<div class="mt-2">
					<strong>Coaching Notes:</strong><br />
					@Html.Raw(WebUtility.HtmlDecode(@Model.LogDetail.CoachingNotes))
				</div>

				<div class='mt-2 @(string.IsNullOrEmpty(Model.LogDetail.MgrReviewAutoDate) ? "hide" : "show")'>
					<strong>Manager Review Information:</strong><br />
					<div>
						@Model.LogDetail.ReviewedManagerName<br />
						Reviewed and acknowledged Quality Monitor on @Model.LogDetail.MgrReviewAutoDate
					</div>
				</div>

				<div class="mt-2">
					<strong>Supervisor Review Information:</strong><br />
					<div class='@(string.IsNullOrEmpty(Model.LogDetail.SupReviewedAutoDate) ? "hide" : "show")'>
						@Model.LogDetail.ReviewedSupervisorName<br />
						@Model.LogDetail.EmployeeReviewLabel on @Model.LogDetail.SupReviewedAutoDate
					</div>
				</div>

				<div class="mt-2">
					<strong>Employee Review Information:</strong><br />
					<div class='@(string.IsNullOrEmpty(Model.LogDetail.EmployeeReviewDate) ? "hide" : "show")'>
						@Model.LogDetail.EmployeeName<br />
						@Model.LogDetail.EmployeeReviewLabel @Model.LogDetail.EmployeeReviewDate
					</div>
				</div>

				<div class="mt-2">
					<strong>Employee Comments/Feedback:</strong><br />
					@Model.LogDetail.EmployeeComments
				</div>
				<!-- /.modal-body -->
				<div class="modal-footer">
					<div class="form-group">
						<button class="btn btn-default float-right" id="btn-close" data-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
			<!--/.col-xs-8 -->
		</div>
	<!--/.row -->
</div>
