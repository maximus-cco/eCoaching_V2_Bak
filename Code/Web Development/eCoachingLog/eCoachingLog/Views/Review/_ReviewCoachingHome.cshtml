<div class="container-fluid" style="height: 100%;">
	<div class="row row-eq-height">
		<div class="col-xs-4 blue-bar">
			@{Html.RenderPartial("_CoachingLogInfo"); }
		</div>
		<!--/.col-xs-4 -->
		<div class="col-xs-8">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				@if (Model.IsReviewFinalForm)
				{
					<h3>Final</h3>
				}
				else
				{
					<h3>Review</h3>
					if (!Model.IsReadOnly)
					{
						<div class="danger pull-right">Please do NOT include PII or PHI in the log entry.</div>
						<br />
						<div class="pull-right">Please note that all fields are required. Double-check your work to ensure accuracy.</div>
					}

					<div id="div-error-prompt" class="danger"></div>
				}
			</div>

			<div class="modal-body" style="font-size: small;">
				<strong>Coaching Reason(s):</strong>
				<div class="table-responsive">
					<table class="table table-hover">
						@foreach (var reason in Model.LogDetail.Reasons)
						{
							<tr>
								<td>@reason.Description</td>
								<td>
									@foreach (var sub in reason.SubReasons)
									{
										@sub <br />
									}
								</td>
								<td>@reason.Value</td>
							</tr>
						}
					</table>
				</div>
				<div class="mt-2">
					<strong>Details of the behavior being coached:</strong>
					<br />
					@Html.Raw(Model.LogDetail.Behavior)
				</div>

				@*<div class='mt-2 @(@Model.ShowManagerNotes ? "show" : "hide")'>
					<strong>Notes from Manager:</strong>
					<br />
					@Model.LogDetail.MgrNotes
				</div>
				<div class='mt-2 @(@Model.ShowCoachingNotes ? "show" : "hide")'>
					<strong>Coaching Notes:</strong>
					<br />
					@Model.LogDetail.CoachingNotes
				</div>*@

				<div class="mt-2">
					@if (!Model.IsReadOnly && Model.IsAcknowledgeForm)
					{
						{ Html.RenderPartial("_AcknowledgeCoaching"); }
					}
					else if (!Model.IsReadOnly && Model.IsReviewForm)
					{
						{ Html.RenderPartial("_ReviewCoaching"); }
					}
					else if (Model.IsReviewFinalForm)
					{
						{ Html.RenderPartial("_ReviewCoachingFinal"); }
					}
				</div>
			</div>
			<!-- /.modal-body -->

			<div class="modal-footer">
				<div class="form-group">
					@if (Model.IsReviewFinalForm || Model.IsReadOnly)
					{
						<button class="btn btn-primary float-right" id="btn-close" data-dismiss="modal">Close</button>
					}
					else if (Model.IsAcknowledgeForm || Model.IsReviewForm)
					{
						<button class="btn btn-primary float-right" type="submit" id="btn-submit">Submit</button>
					}
				</div>
			</div>
		</div>
		<!--/.col-xs-8 -->
	</div>
	<!--/.row -->
</div>



