@model eCoachingLog.ViewModels.ReviewViewModel
<div class="container-fluid" style="height: 100%;">
	<div class="row row-eq-height" >
		<div class="col-xs-3 blue-bar" >
			@{Html.RenderPartial("_WarningLogInfo"); }
		</div>
		<!--/.col-xs-3 -->
		<div class="col-xs-9">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" style="font-size: large">X</span></button>
			</div>

			<div class="modal-body" style="font-size: small;">
				@{ Html.RenderPartial("_Reasons", Model.WarningLogDetail.Reasons); }
			</div>

			<div class="mt-2 instruction-text @(string.IsNullOrEmpty(@Model.InstructionText) ? "hide" : "show")">
				@Html.Raw(Model.InstructionText)
			</div>

			@{ Html.RenderPartial("_EmployeeWarningReviewInfo"); }
			
			<!-- /.modal-body -->
			<div class="modal-footer mt-2">
				<div class="form-group">
					<button class="btn btn-default float-right" id="btn-close" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
		<!--/.col-xs-9 -->
	</div>
	<!--/.row -->
</div>
