@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<title>Load Test Login - eCoaching Log</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	@Styles.Render("~/Content/css")
	<style>
		h1 {
			font-weight: 400;
			font-size: 50px;
		}
		.panel {
			background-color: rgb(238, 250, 255);
		}
	</style>
	<script> window.history.forward(); </script>
</head>
<body>
	<div class="container-fluid" id="banner">
		<div class="row ecl-logo">
			<img alt="CCO logo" src="~/Content/Images/cco-logo.jpg">
			<span style="float: right;"><img alt="eCL logo" src="~/Content/Images/eCL-logo.png"></span>
		</div>
	</div>
	<hr />
	<div class="container panel panel-info">
		<h1>Load Test</h1>
		@using (Html.BeginForm("Login", "LoadTest", FormMethod.Post, new { id = "loadtest-login-form"}))
		{
			<div class="form-group ">
				<label for="userLanId">Log in as another user:</label>
				@Html.DropDownList("userLanId", ViewData["userList"] as List<SelectListItem>, new { @class = "form-control", style = "width: 350px;" })
			</div>
			<button class="btn btn-primary" type="submit" id="btn-login">Login</button>
			<div class="help-block" style="margin: 20px 0 8px 0;">
				<small class="text-muted">To login as a different user, please open a new IE window in a</small><strong> NEW </strong><small class="text-muted">session by pressing alt to open the menu bar, then click File->New Session.</small>
			</div>
		}
	</div>
</body>
</html>

