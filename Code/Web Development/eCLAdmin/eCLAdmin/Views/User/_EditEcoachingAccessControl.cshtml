@model eCLAdmin.ViewModels.eCoachingAccessControlViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h3 class="modal-title">Edit</h3>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form-edit-ecoaching-access-control" }))
{
    @Html.HiddenFor(m => m.RowId)
    @Html.HiddenFor(m => m.LanId)
    @Html.HiddenFor(m => m.Name)

    <div class="modal-body">

        <div id = "validation-msg"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.LanId, new { @class = "control-label col-sm-2" })
            @Model.LanId
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-2" }) 
            @Model.Name
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Role, new { @class = "control-label col-sm-2" })
            @Html.RadioButtonFor(m => m.Role, "ECL") ECL &nbsp;&nbsp;
            @Html.RadioButtonFor(m => m.Role, "ARC") ARC
            @Html.ValidationMessageFor(m => m.Role, "", new { @class = "col-sm-offset-2 field-validation-error" })
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" id="btn-cancel" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="submit" id="btn-update" class="btn btn-primary">Update</button>
    </div>
}

<script>
    var updateUserUrl = '@Url.Action("UpdateEcoachingAccessControl")';
</script>

@Scripts.Render("~/bundles/scripts/eCoachingAccessControlUpdate")

