@model eCLAdmin.ViewModels.eCoachingAccessControlViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h3 class="modal-title">Edit</h3>
</div>

@Html.HiddenFor(m => m.SubcontractorDataAccess)

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form-edit-ecoaching-access-control" }))
{
    @Html.HiddenFor(m => m.RowId)
    @Html.HiddenFor(m => m.LanId)
    @Html.HiddenFor(m => m.Name)

    <div class="modal-body">

        <div id = "validation-msg"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.LanId)
            @Model.LanId
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Name) 
            @Model.Name
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Role)
            @Html.DropDownListFor(m => m.Role, Model.RoleList, new { @id = "dropdown-user-role", @class = "form-control" })
            @Html.HiddenFor(m => m.Role)
        </div>

        @{ Html.RenderPartial("_SubcontractorDataAccess"); }

    </div>

    <div class="modal-footer">
        <button type="button" id="btn-cancel" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="submit" id="btn-update" class="btn btn-primary">Update</button>
    </div>
}

<script>
    var updateUserUrl = '@Url.Action("UpdateEcoachingAccessControl")';
</script>

@Scripts.Render("~/bundles/scripts/eCoachingAccessControlUpdate")

