@model eCLAdmin.ViewModels.eCoachingAccessControlAddViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h3 class="modal-title">Add</h3>
</div>



@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form-add-ecoaching-access-control" }))
{
    <div class="modal-body">

        <div id="validation-msg"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.SiteId, new { @class = "control-label col-sm-2" })
            @Html.DropDownListFor(m => m.SiteId, Model.SiteList, new { @id = "dropdown-user-site", @class = "form-control" })
            @Html.HiddenFor(m => m.SiteId)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.LanId, new { @class = "control-label col-sm-2" })
            @Html.DropDownListFor(m => m.LanId, Model.NameList, new { @id = "dropdown-user-name", @class = "form-control" })
            @Html.HiddenFor(m => m.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Role, new { @class = "control-label col-sm-2" })
            @Html.RadioButtonFor(m => m.Role, "ECL") ECL &nbsp;&nbsp;
            @Html.RadioButtonFor(m => m.Role, "ARC") ARC
            @Html.ValidationMessageFor(m => m.Role, "", new { @class = "col-sm-offset-2 field-validation-error" })
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" id="btn-cancel" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="submit" id="btn-add" class="btn btn-primary">Add</button>
    </div>
}

<script>
    var addUserUrl = '@Url.Action("AddEcoachingAccessControl")';
    var loadUsersBySiteUrl = '@Url.Action("LoadUsersBySite")';

    //$(document).ready(function () {
    //    alert('add');
    //});
</script>


@Scripts.Render("~/bundles/scripts/eCoachingAccessControlAdd")